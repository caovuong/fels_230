<div class="row">
  <h1><%= t "words.add_word" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>
      <% if @word.category_id %>
        <%= f.hidden_field :category_id, value: @word.category_id %>
      <% else %>
        <%= f.select "category_id", @list_category %>
      <% end %>
      <div class="input-field col s12">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>
      <br>
      <br>
      <div>
        <span id="btn-add"> <%= t "views.admin.words.new.answer" %> </span>
      </div>
      <br>
      <br>
      <div class="content"></div>
      <%= f.submit t "views.admin.words.new.add_word", class: "btn btn-lg btn-primary" %>
      <br>
      <br>
    <% end %>
  </div>
</div>
