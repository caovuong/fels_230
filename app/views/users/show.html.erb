<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-2">
        <%= link_to t("words.word_list"), words_path,
          class: "btn btn-lg btn-danger" %>
      </div>
      <div class="col-md-2">
        <%= link_to t("lessons.lesson"), categories_path,
          class: "btn btn-lg btn-danger" %>
      </div>
    </div>
    <%= render "follow_form" if logged_in? %>
  </div>
</div>
