<div class="panel panel-heading">
  <h1><%= t "views.words.index.word_list" %></h1>
</div>
<div class="panel">
  <div class="form-inline center">
    <%= form_tag words_path, method: :get do %>
      <div class="row">
        <div class="col-md-2">
          <%= select_tag :by_category,
            options_from_collection_for_select(@categories, :id, :name,
            params[:by_category]),
            include_blank: t(".all"), class: "form-control" %>
        </div>
        <div class="col-md-8">
          <% Settings.word_list.each do |option| %>
            <div class="col-md-3">
              <%= radio_button_tag :word_type, option,
                params[:word_type] == option %>
              <%= t ".#{option}" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-2">
          <%= submit_tag t("views.words.index.search"), class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="panel panel-body col-md-4 col-md-offset-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "views.words.index.words" %></th>
        <th><%= t "views.words.index.meaning" %></th>
      </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.content %></td>
          <td>
            <% word.answers.each do |answer| %>
              <%= answer.content if answer.is_correct? %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @words %>
</div>
<div class="clearfix"></div>
